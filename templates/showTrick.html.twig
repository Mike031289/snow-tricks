{# templates/home.html.twig #}
{% extends 'base.html.twig' %}
{% set page = 'showtrick' %}

{% block header %}
  <header>
    <nav class="navbar navbar-marketing navbar-expand-lg bg-light navbar-light fixed-top">
      <div class="container bg-light px-5">
        <a class="navbar-brand text-black" href="{{ path('homepage') }}">Snow-Tricks</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <hr class="navbar-nav mr-auto">
          <a class="nav-link {% if page == 'home' %}active{% endif %}" href="{{ path('homepage') }}">Accueil</a>
          <hr class="navbar-nav mr-5">
          <a class="nav-link navbar-text {% if page == 'register' %}active{% endif %}" href="{{ path('register', { 'slug': 'inscription'}) }}">Inscription</a>
          <hr class="navbar-nav mr-5">
          <a class="nav-link navbar-text {% if page == 'login' %}active{% endif %}" href="{{ path('connexion', { 'slug': 'loginForm'}) }}">Connexion
          </a>
        </div>
      </div>
    </nav>
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="trick-header-img" src="{{ asset('pictures/trick24.jpeg') }}" alt="Description de l'image">
          <div class="carousel-caption d-none d-md-block">
            <a class="d-none d-md-block" href=""><i class="mr-3" data-feather="edit"></i> <i data-feather="trash"></i></a>
            <h5>First slide label</h5>
            <p>Some representative placeholder content for the first slide.</p>
          </div>
        </div>
      </div>
    </div>
  </header>
{% endblock %}
{% block body %}
  <body>
    <div class="container"
      <div class="jumbotron">
        <h1 class="display-4 pt-5">Médias</h1>
        <p class="lead">
          <div class="row gx-5">
          <div class="row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Images</h5>
                  <p class="card-text">
                    <div id="carouselExampleSlidesOnly trick-media-picture" class="carousel slide carousel-fade" data-bs-ride="carousel">
                      <div class="carousel-inner">
                        <div class="carousel-item active">
                          <img class="picture" src="{{ asset('pictures/snow-trickers-img.jpeg') }}" alt="tricks">
                        </div>
                        <div class="carousel-item">
                          <img class="picture" src="{{ asset('pictures/trick1.jpeg') }}" alt="tricks">
                        </div>
                        <div class="carousel-item">
                          <img class="picture" src="{{ asset('pictures/trick18.jpeg') }}" alt="tricks">
                        </div>
                      </div>
                    </div>
                  </p>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Vidéos</h5>
                  <p class="card-text">
                    <div id="carouselExampleSlidesOnly trick-media-video" class="carousel slide carousel-fade" data-bs-ride="carousel">
                      <div class="carousel-inner">
                        <div class="carousel-item active">
                          <!-- Vidéo YouTube -->
                          <iframe class="video" src="https://www.youtube.com/embed/aINlzgrOovI?si=F8L2Y0av4zk5CuF1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
                        </div>
                        <div class="carousel-item">
                          <!-- Autre vidéo -->
                          <iframe class="video" src="https://www.youtube.com/embed/vx-uVPSSnx0?si=Savr0smQk1QXrG7Q" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
                        </div>
                        <div class="carousel-item">
                          <!-- Autre vidéo -->
                          <iframe class="video" src="https://www.youtube.com/embed/LAuDJsReHlw?si=Mcl5q4PbPeKEbJwj" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
                        </div>
                      </div>
                    </div>
                  </p>
                </div>
              </div>
            </div>
          </div>
          </div>
        </p>
        <hr class="my-4">
      </div>
    </div>
  </body>
{% endblock %}
