<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>
      {% block title %}snow-tricks{% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.0/feather.min.js" crossorigin="anonymous"></script>
    <!-- font awesome icon-->
    <script data-search-pseudo-elements="data-search-pseudo-elements" defer="defer" src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css"/>

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
      <link rel="stylesheet" href="{{ asset('css/myStyles.css') }}"/>
      <link rel="stylesheet" href="{{ asset('css/uiStyles.css') }}"/>
    {% endblock %}
    {% block header %}
      <header>
        <nav class="navbar navbar-marketing navbar-expand-lg bg-primary navbar-dark fixed-top">
          <div class="container bg-primary px-5">
            <a class="navbar-brand text-white" href="{{ path('homepage') }}">Snow-Tricks</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
              {# <i data-feather="menu"></i> #}
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <hr class="navbar-nav mr-auto">
              <a class="nav-link navbar-text text-white {% if page == 'register' %}active{% endif %}" href="{{ path('register', { 'slug': 'inscription'}) }}">Inscription</a>
              <hr class="navbar-nav mr-5">
              <a class="nav-link navbar-text text-white {% if page == 'login' %}active{% endif %}" href="{{ path('connexion', { 'slug': 'loginForm'}) }}">Connexion
              <i class="ms-2" data-feather="log-in"></i>
              </a>
            </div>
          </div>
        </nav>
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="w-100" src="{{ asset('pictures/snow-trickers-img.jpeg') }}" alt="Description de l'image">
            </div>
          </div>
        </div>
      </header>
    {% endblock %}
    {% block body %}
      <body></body>
    {% endblock body %}
    <!-- Page footer-->
    {% block footer %}
      <footer class="footer pt-10 pb-5 mt-auto bg-wite footer-wite">
        <div class="container px-5">
          <div class="row gx-5">
            <div class="col-lg-6 col-md-6">
              <div class="footer-brand">Adjoukou AGBELOU</div>
              <div class="mb-3">Développeur PHP/SYMFONY</div>
              <div class="icon-list-social mb-5">
                <a class="icon-list-social-link" href="https://www.linkedin.com/in/mike-adjoukou-agbelou-23640098/" target="blank">
                  <i class="fab fa-linkedin"></i>
                </a>
                <a class="icon-list-social-link" href="https://github.com/Mike031289">
                  <i class="fab fa-github" target="blank"></i>
                </a>
                <a class="icon-list-social-link" href="https://dmdprod.com/developpeur_adjoukou-agbelou/" target="blank">
                  <i class="fas fa-globe"></i>
                </a>
              </div>
            </div>
            <div class="col-lg-6 col-md-6">
              <div class="text-uppercase-expanded text-xs mb-4">Liens</div>
              <a class="nav-link navbar-text text-white {% if page == 'register' %}active{% endif %}" href="{{ path('register', { 'slug': 'Inscription'}) }}">Inscription</a>
              <a class="nav-link navbar-text text-white {% if page == 'login' %}active{% endif %}" href="{{ path('connexion', { 'slug': 'loginForm'}) }}">Connexion
              </a>
            </div>
          </div>
          <hr class="my-5"/>
          <div class="row gx-5 align-items-center">
            <div class="col-md-6 small">Copyright &copy; dmdprod 2024</div>
            <div class="col-md-6 text-md-end small">
              <a href="#!">Politique de Confidentialité</a>
              |
              <a href="#!">Conditions Générales D'utilisation</a>
            </div>
          </div>
        </div>
      </footer>
    {% endblock footer %}
    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
      <script src="{{ asset('js/myJs.js') }}"></script>
      <script src="{{ asset('js/passwordShow.js') }}"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    {% endblock javascripts %}
