{% extends 'base.html.twig' %}
{% set page = 'newtrick' %}

{% block title %}Créer un nouveau trick{% endblock %}

{% block header %}
  <!-- Header content ici -->
{% endblock %}

{% block body %}
  <body id="layoutAuthentication" class="bg-primary">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container-xl px-4">
          <div class="row justify-content-center">
            <div class="col-lg-7">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header justify-content-center">
                  <h3 class="fw-light my-4">Créer un nouveau trick</h3>
                </div>
                <div class="card-body p-0">
                  <!-- Symfony Form -->
                  {{ form_start(addTrickForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                  <div class="row gx-3 p-5 pb-2">
                    <div class="{{ addTrickForm.name.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Category (name)-->
                      <div class="mb-3">
                        {{ form_label(addTrickForm.name, 'Nom du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(addTrickForm.name, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(addTrickForm.name) }}
                        </span>
                      </div>
                    </div>
                    <div class="{{ addTrickForm.description.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Category (description)-->
                      <div class="mb-3">
                        {{ form_label(addTrickForm.description, 'Description du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(addTrickForm.description, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(addTrickForm.description) }}
                        </span>
                      </div>
                    </div>
                    <div class="{{ addTrickForm.category.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Category (Category)-->
                      <div class="mb-3">
                        {{ form_label(addTrickForm.category, 'Groupe du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(addTrickForm.category, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(addTrickForm.category) }}
                        </span>
                      </div>
                    </div>
                    <div class="{{ addTrickForm.picture.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Category (picture)-->
                      <div class="mb-3">
                        {{ form_label(addTrickForm.picture, 'Image du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(addTrickForm.picture, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(addTrickForm.picture) }}
                        </span>
                      </div>
                    </div>
                    <div class="{{ addTrickForm.video.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Category (video)-->
                      <div class="mb-3">
                        {{ form_label(addTrickForm.video, 'Vidéo du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(addTrickForm.video, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(addTrickForm.video) }}
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex align-items-center justify-content-between p-5 pb-2 pt-2">
                    <a class="small text-black" href="{{ path('homepage') }}">Retour à l'accueil</a>
                    <button type="submit" class="btn btn-primary">Créer le trick</button>
                  </div>
                  <div class="small text-muted p-5 pt-2 pb-2">
                    * Champs obligatoires
                  </div>
                  {{ form_end(addTrickForm) }}
                  <!-- Fin Symfony Form -->
                </div>
                <!-- ... Le reste du code du formulaire existant -->
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
  <!-- Page footer-->
  {% block footer %}{% endblock footer %}
{% endblock %}
