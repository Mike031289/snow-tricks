{% extends 'base.html.twig' %}
{% set page = 'newtrick' %}

{% block title %}Créer un nouveau trick{% endblock %}

{% block header %}
  <!-- Header content here -->
{% endblock %}

{% block body %}
  <body id="layoutAuthentication" class="bg-primary">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container-xl px-4">
          <div class="row justify-content-center">
            <div class="col-lg-7">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header justify-content-center">
                  <h3 class="fw-light my-4">Créer un nouveau trick</h3>
                </div>
                <div class="card-body p-0">
                  <!-- Symfony Form -->
                  {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                  <div class="row gx-3 p-5 pb-2">
                    <div class="{{ form.name.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Trick (name) -->
                      <div class="mb-3">
                        {{ form_label(form.name, 'Nom du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(form.name) }}
                        </span>
                      </div>
                    </div>
                    <div class="{{ form.description.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Trick (description) -->
                      <div class="mb-3">
                        {{ form_label(form.description, 'Description du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(form.description) }}
                        </span>
                      </div>
                    </div>
                    <div class="{{ form.category.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Trick (category) -->
                      <div class="mb-3">
                        {{ form_label(form.category, 'Groupe du trick *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(form.category) }}
                        </span>
                      </div>
                    </div>
                    {# <div id="medias" class="{{ form.medias.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Trick (medias) -->
                      <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                          <label class="small mb-1">Médias du trick *</label>
                          <button type="button" class="btn btn-success" id="add-media-btn">Ajouter un média</button>
                        </div>
                        {{ form_widget(form.medias, {'attr': {'class': 'form-control'} }) }}
                        <span class="error-message">
                          {{ form_errors(form.medias) }}
                        </span>
                      </div>
                    </div> #}
                    <div id="image-field" class="{{ form.image.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Trick (medias) -->
                      <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                          <label class="small mb-1">Médias du trick</label>
                          <button type="button" class="btn btn-success" id="add-image-btn">Ajouter des images</button>
                        </div>
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'} }) }}
                        <span class="error-message">
                          {{ form_errors(form.image) }}
                        </span>
                      </div>
                    </div>
                    <div id="videoUrl-field" class="{{ form.videoUrl.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Trick (medias) -->
                      <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                          <label class="small mb-1">Médias du trick</label>
                          <button type="button" class="btn btn-success" id="add-video-btn">Ajouter des vidéos</button>
                        </div>
                        {{ form_widget(form.videoUrl, {'attr': {'class': 'form-control'} }) }}
                        <span class="error-message">
                          {{ form_errors(form.videoUrl) }}
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex align-items-center justify-content-between p-5 pb-2 pt-2">
                    <a class="small text-black" href="{{ path('homepage') }}">Retour à l'accueil</a>
                    <button type="submit" class="btn btn-primary">Créer le trick</button>
                  </div>
                  <div class="small text-muted p-5 pt-2 pb-2">
                    * Champs obligatoires
                  </div>
                  {{ form_rest(form) }}
                  {{ form_end(form) }}
                  <!-- End Symfony Form -->
                </div>
                <!-- ... The rest of the existing form code -->
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
  <!-- Page footer-->
  {% block footer %}{% endblock footer %}
{% endblock %}
