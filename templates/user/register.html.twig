{% extends 'base.html.twig' %}
{% set page = 'register' %}

{% block title %}Inscription{% endblock %}
{% block header %}
{% endblock %}
{% block body %}
  <body id="layoutAuthentication" class="bg-primary">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container-xl px-4">
          <div class="row justify-content-center">
            <div class="col-lg-7">
              <!-- Basic registration form-->
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header justify-content-center">
                  <h3 class="fw-light my-4">Créer un compte</h3>
                </div>
                <div class="card-body p-0">
                  <!-- Symfony Registration form -->
                  {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                  <!-- Form Row-->
                  <div class="row gx-3 p-5 pb-2">
                    <div class="{{ form.firstName.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Group (first name)-->
                      <div class="mb-3">
                        {{ form_label(form.firstName, 'Prénom *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(form.firstName) }}</span>
                      </div>
                    </div>
                    <div class="{{ form.lastName.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Group (last name)-->
                      <div class="mb-3">
                        {{ form_label(form.lastName, 'Nom *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message">
                          {{ form_errors(form.lastName) }}</span>
                      </div>
                    </div>
                    <div class="{{ form.userName.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Group (user name)-->
                      <div class="mb-3">
                        {{ form_label(form.userName, 'Nom d\'utilisateur *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.userName, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message"> {{ form_errors(form.userName) }}</span>
                      </div>
                    </div>
                    <div class="{{ form.email.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Group (email)-->
                      <div class="mb-3">
                        {{ form_label(form.email, 'Adresse email *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message"> {{ form_errors(form.email) }}</span>
                      </div>
                    </div>
                    <!-- Form Row -->
                    <div class="row gx-3">
                      <div class="col-md-6">
                        <div class="{{ form.password.vars.errors ? 'has-error' : '' }}">
                          <!-- Form Group (password)-->
                          <div class="mb-3">
                            {{ form_label(form.password, 'Mot de passe *', {'label_attr': {'class': 'small mb-1'}}) }}
                              <div class="input-group-append">  
                                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                <button class="btn btn-outline-black" type="button" id="showPasswordBtn">
                                  <i class="fa fa-eye" id="password-icon"></i>
                                </button>
                              </div>
                              <span class="error-message"> {{ form_errors(form.password) }}</span>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="{{ form.passwordConfirm.vars.errors ? 'has-error' : '' }}">
                          <!-- Form Group (password confirm)-->
                          <div class="mb-3">
                            {{ form_label(form.passwordConfirm, 'Confirmez votre mot de passe *', {'label_attr': {'class': 'small mb-1'}}) }}
                              <div class="input-group-append">
                                {{ form_widget(form.passwordConfirm, {'attr': {'class': 'form-control'}}) }}
                                <button class="btn btn-outline-black" type="button" id="showConfirmPasswordBtn">
                                  <i class="fa fa-eye" id="confirm-password-icon"></i>
                                </button>
                              </div>
                            <span class="error-message"> {{ form_errors(form.passwordConfirm) }}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="{{ form.userPicture.vars.errors ? 'has-error' : '' }}">
                      <!-- Form Group (user picture)-->
                      <div class="mb-3">
                        {{ form_label(form.userPicture, 'Image de profil *', {'label_attr': {'class': 'small mb-1'}}) }}
                        {{ form_widget(form.userPicture, {'attr': {'class': 'form-control'}}) }}
                        <span class="error-message"> {{ form_errors(form.userPicture) }}</span>
                      </div>
                    </div>
                  </div>
                  <!-- Form Group (create account submit)-->
                  <div class="d-flex align-items-center justify-content-between p-5 pb-2 pt-2">
                    <a class="small text-black" href="{{ path('homepage') }}">Voir la liste des figures</a>
                    <button type="submit" class="btn btn-primary">Créer un compte</button>
                  </div>
                  <div class="small text-muted p-5 pt-2 pb-2">
                    * Ces champs sont obligatoires
                  </div>
                {{ form_end(form) }}
                <!-- Fin Symfony Registration form -->
                <div class="card-footer text-center">
                  <div class="small">
                    <a class="text-black" href="{{ path('connexion') }}">Vous êtes déjà inscrit? Connectez-vous</a>
                  </div>
                </div>
              </div>
              <!-- ... Le reste du code du formulaire existant -->
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
  <!-- Page footer-->
  {% block footer %}
  {% endblock footer %}
{% endblock %}

